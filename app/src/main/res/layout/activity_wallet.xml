<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <ScrollView
        android:id="@+id/manualRedemptionView"
        android:layout_width="326dp"
        android:layout_height="668dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stepOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stepOne" />

            <TextView
                android:id="@+id/stepTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stepTwo" />

            <TextView
                android:id="@+id/stepThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stepThree" />

            <TextView
                android:id="@+id/stepFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stepFour" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seedText"
                    android:layout_width="264dp"
                    android:layout_height="98dp"
                    android:background="#3C673AB7" />

                <ImageButton
                    android:id="@+id/copyButtonSeed"
                    android:layout_width="63dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/copyDesc"
                    android:src="@drawable/ic_copy" />
            </LinearLayout>

            <TextView
                android:id="@+id/stepFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stepFive" />

            <TextView
                android:id="@+id/stepSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stepSix" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/restoreDate"
                    android:layout_width="271dp"
                    android:layout_height="match_parent"
                    android:background="#3C673AB7"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/copyButtonDate"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/copyDesc"
                    android:src="@drawable/ic_copy" />
            </LinearLayout>

            <TextView
                android:id="@+id/stepSeven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stepSeven" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="#673AB7"
        android:text="@string/walletHeader"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/redemptionSwitch"
        android:layout_width="121dp"
        android:layout_height="36dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="145dp"
        android:background="#3C673AB7"
        android:text="@string/switchAuto"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ScrollView
        android:id="@+id/automaticRedemptionView"
        android:layout_width="326dp"
        android:layout_height="500dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/redemptionAddressPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/redemptionAddressPrompt"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/xmrAddressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="XMR address"
                android:inputType="text" />

            <Button
                android:id="@+id/autoRedemptionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/redeemButton" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/advanced"
                android:textAlignment="center"
                android:textColor="#3C673AB7"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nodePrompt"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/nodeInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:text="@string/defaultNode"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/advancedRedemptionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/advancedRedeem" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>